rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper: Check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper: Check if user is a team member with a specific role
    // Note: Storage rules can access Firestore data via firestore.get()
    function isTeamMember() {
      return isSignedIn() &&
             firestore.exists(/databases/(default)/documents/team_members/$(request.auth.uid));
    }

    function hasRole(role) {
      return isTeamMember() &&
             firestore.get(/databases/(default)/documents/team_members/$(request.auth.uid)).data.role == role;
    }

    function isAdmin() {
      return hasRole('Admin') || hasRole('admin');
    }

    function isCoordinator() {
      return hasRole('Coordinator');
    }

    function isTherapist() {
      return hasRole('Therapist');
    }

    function isStaff() {
      return isAdmin() || isCoordinator() || isTherapist();
    }

    // Helper: Check if user is a parent of a specific client
    function isParentOf(clientId) {
      let clientDoc = firestore.get(/databases/(default)/documents/clients/$(clientId));
      return isSignedIn() &&
             clientDoc != null &&
             'parentUids' in clientDoc.data &&
             request.auth.uid in clientDoc.data.parentUids;
    }

    // ============================================
    // CLIENT DOCUMENTS
    // Path: clients/{clientId}/documents/{fileName}
    // ============================================
    match /clients/{clientId}/documents/{fileName} {
      // READ: Staff can read all client documents
      //       Parents can read documents (access control via Firestore sharedWithParent)
      allow read: if isStaff() || isParentOf(clientId);

      // WRITE (upload): Only staff can upload documents
      allow write: if isStaff() &&
                      request.resource.size < 10 * 1024 * 1024 && // Max 10MB
                      request.resource.contentType.matches('application/pdf|application/msword|application/vnd.openxmlformats-officedocument.*|image/.*|application/vnd.ms-excel|application/vnd.ms-powerpoint');

      // DELETE: Only staff can delete documents
      allow delete: if isStaff();
    }

    // ============================================
    // DEFAULT: Deny all other paths
    // ============================================
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
