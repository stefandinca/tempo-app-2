rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function hasRole(role) {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/team_members/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/team_members/$(request.auth.uid)).data.role == role;
    }
    
    function isAdmin() {
      return hasRole('Admin') || hasRole('admin');
    }
    
    function isCoordinator() {
      return hasRole('Coordinator');
    }
    
    function isTherapist() {
      return hasRole('Therapist');
    }
    
    function isParent(clientId) {
      // Check if the user is in the parentUids list of the target client
      // We use get() because this helper is used across different collections (events, plans, etc.)
      let clientDoc = get(/databases/$(database)/documents/clients/$(clientId));
      return isSignedIn() && (
        request.auth.uid == clientId || 
        (clientDoc != null && 'parentUids' in clientDoc.data && clientDoc.data.parentUids.hasAny([request.auth.uid]))
      );
    }

    // --- Collections ---

    match /team_members/{memberId} {
      // Allow public read so Parent Portal can display therapist names/initials
      allow read: if true; 
      allow write: if isAdmin();
    }

    match /clients/{clientId} {
      allow list: if true;
      allow get: if isAdmin() || isCoordinator() || isTherapist() || isParent(clientId);
      allow create: if isAdmin() || isCoordinator();
      // Allow admins/coordinators full update, or anonymous users to only add their UID to parentUids
      allow update: if isAdmin() || isCoordinator() || (
        isSignedIn() &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['parentUids']) &&
        request.resource.data.parentUids.hasAny([request.auth.uid]) &&
        // Robust check: Allow update if field is missing, null, or if we are strictly appending
        (
          !('parentUids' in resource.data) || 
          resource.data.parentUids == null ||
          request.resource.data.parentUids.hasAll(resource.data.parentUids)
        )
      );
      allow delete: if isAdmin();
    }

    match /events/{eventId} {
      allow read: if true; 
      allow create: if isAdmin() || isCoordinator() || isTherapist();
      allow update: if isAdmin() || isCoordinator() || (isTherapist() && resource.data.therapistId == request.auth.uid);
      allow delete: if isAdmin() || isCoordinator() || (isTherapist() && resource.data.therapistId == request.auth.uid);
    }

    match /services/{serviceId} {
      allow read: if true; // Allow public read for portal consistency if needed
      allow write: if isAdmin();
    }
    
    match /programs/{programId} {
      allow read: if true; // Allow public read for portal consistency
      allow write: if isAdmin();
    }
    
    // System Settings (New)
    match /system_settings/{settingId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Invoices (New)
    match /invoices/{invoiceId} {
      // TODO: Harden this with proper Parent Auth (Claims)
      allow read: if true; 
      allow create: if isAdmin();
      allow update: if isAdmin();
    }

    // Team Payouts (New)
    match /payouts/{payoutId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Notifications
    match /notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if isSignedIn() && resource.data.recipientId == request.auth.uid;
      // Any authenticated user can create notifications (for other users)
      allow create: if isSignedIn();
      // Users can update their own notifications (mark as read)
      allow update: if isSignedIn() && resource.data.recipientId == request.auth.uid;
      // Users can delete their own notifications
      allow delete: if isSignedIn() && resource.data.recipientId == request.auth.uid;
    }
    
    match /clients/{clientId}/evaluations/{evalId} {
      allow read: if isAdmin() || isCoordinator() || isTherapist() || isParent(clientId);
      allow write: if isAdmin() || isCoordinator() || isTherapist();
    }

    match /clients/{clientId}/interventionPlans/{planId} {
      allow read: if isAdmin() || isCoordinator() || isTherapist() || isParent(clientId);
      allow write: if isAdmin() || isCoordinator();
    }

    // Client Documents (for document management feature)
    match /clients/{clientId}/documents/{documentId} {
      // Staff can read all documents
      // Parents can only read documents where sharedWithParent == true
      allow read: if isAdmin() || isCoordinator() || isTherapist() ||
                    (isParent(clientId) && resource.data.sharedWithParent == true);

      // Only staff can create, update, delete documents
      allow create: if isAdmin() || isCoordinator() || isTherapist();
      allow update: if isAdmin() || isCoordinator() || isTherapist();
      allow delete: if isAdmin() || isCoordinator() || isTherapist();
    }

        // FCM Tokens

        match /fcm_tokens/{userId} {

          allow read, write: if isSignedIn() && request.auth.uid == userId;

        }

    

            // Messaging System (New)

    

            match /threads/{threadId} {

    

              // Allow get/read if:

    

              // 1. The document exists and the user is a participant.

    

              // 2. The document DOES NOT exist (resource == null) but the threadId implies the user is a participant (deterministic ID check).

    

              allow get: if isSignedIn() && (

    

                (resource != null && request.auth.uid in resource.data.participants) ||

    

                (resource == null && (

    

                   threadId.split("_")[0] == request.auth.uid || 

    

                   (threadId.split("_").size() > 1 && threadId.split("_")[1] == request.auth.uid)

    

                ))

    

              );

    

              allow list: if isSignedIn() && request.auth.uid in resource.data.participants;

    

              

    

              allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;

    

              allow update: if isSignedIn() && request.auth.uid in resource.data.participants;

    

              

    

              match /messages/{messageId} {

    

                allow read: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/threads/$(threadId)).data.participants;

    

                allow create: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/threads/$(threadId)).data.participants;

    

              }

    

            }

    

          }

    

        }

    